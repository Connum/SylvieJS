{
  "git": {
    "commitMessage": "chore: release v${version}",
    "requireCleanWorkingDir": false
  },
  "github": {
    "release": true
  },
  "npm": {
    "publish": true,
    "publishPath": "dist/"
  },
  "plugins": {
    "@release-it/bumper": {
      "out": [
        "dist/package.json"
      ]
    }
  }
}
